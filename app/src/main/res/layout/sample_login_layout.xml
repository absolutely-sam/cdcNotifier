<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="150sp"
            android:layout_height="175sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo_background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/hitam_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-30sp"
                android:text="H I T A M"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="find your path"
                android:textColor="@android:color/white"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/about_us_btn"
            android:layout_width="45sp"
            android:layout_height="50sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:src="@drawable/about_us" />

    </RelativeLayout>

    <com.sampath.bad.mymaterial.MaterialLoginView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:loginActionText="GO"
        app:loginHint="User name"
        app:loginPasswordHint="Password"
        app:loginTextColor="@color/material_login_register_color"
        app:loginTitle="User Login"
        app:registerActionText="SEND"
        app:registerHint="Email"
        app:registerIcon="@drawable/ic_add_white_24dp"
        app:registerPasswordHint="Full name"
        app:registerRepeatPasswordHint="Roll no"
        app:registerTextColor="@color/colorAccent"
        app:registerTitle="Request Credentials" />

</LinearLayout>